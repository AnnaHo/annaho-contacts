.container
  %h2= @agent.name
  .row
    .col-xs-12.col-md-8
      =link_to "New", new_agent_contact_path(@agent), class: "btn btn-primary"
      =link_to "back", agents_path, class: "btn btn-primary pull-right"
      %table.table
        %thead
          %tr
            %th= "phone"
            %th= "default"
            %th= "edit/destroy"
        %tbody 
          -@agent.contacts.each do |contact|
            %tr
              %td= contact.phone
              %td= contact.default
              %td
                = link_to "Edit", edit_agent_contact_path(@agent, contact), class: "btn btn-primary"
                = link_to "Delete", agent_contact_path(@agent, contact), method: :delete, :confirm=>"Are you sure to delete contact?", class: "btn btn-mini btn-danger"    
